package login;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.AfterMethod;

public class Test1 {
	WebDriver driver;
	String BaseUrl = "http://qa_thinh_publication_name_2b-bd.audiencemedia.com";
	String User1 = "admin";
	String Pass1 = "devteam";
	WebElement Ob1;
	@DataProvider
	public Object[][] userdata(){
		return new Object[][]{
				{"","b"},
				{"c",""},
		};
	}

  @Test (dataProvider = "userdata")
  public void f(String user, String pass) {
	  Ob1 = driver.findElement(By.id("id1"));
	  Ob1.sendKeys(user);
	  Ob1 = driver.findElement(By.id("id2"));
	  Ob1.sendKeys(pass);
	  Ob1.submit();
  }

  @Test
  public void f() {
	  Ob1 = driver.findElement(By.id("id1"));
	  Ob1.sendKeys(User1);
	  Ob1 = driver.findElement(By.id("id2"));
	  Ob1.sendKeys(Pass1);
	  Ob1.submit();
  }
  
  @BeforeMethod
  public void beforeMethod() {
	  driver = new FirefoxDriver();
	  driver.get(BaseUrl + "/admin");
  }
  @AfterMethod
  public void afterMethod() {
	  System.out.println("Detected error message!");
	  /*if (driver.findElement(By.className("message error")).isDisplayed()) {
		System.out.println("Detected error message!");
	} else {
		System.out.println("No error message");
	} */
	  driver.quit();
	  System.out.println("OK" + "\n");
  }
}
