		selenium.click("//*[@id='tabnav']/li/div[1]/a[2]");
		selenium.waitForPageToLoad("30000");
		
//		selenium.click("//a[@onclick=\"xt_med('C',xtn2,'hide_thumbnail','A'); return common.set_md('li');\"]");
//		selenium.waitForPageToLoad("30000");
